@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    var culture = CultureInfo.CurrentCulture.Name;
}

<h4 localize-content>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <localize>
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p><p><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>
        </localize>
        <form id="download-data" asp-page="DownloadPersonalData" asp-route-culture="@culture" method="post" class="form-group">
            <button class="btn btn-primary" type="submit" localize-content>Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" asp-route-culture="@culture" class="btn btn-primary" localize-content>Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}