@{
  ViewData["Title"] = "Contact";
}

<header class="pb-2 mt-4 mb-2 border-bottom text-center">
  <h1 localize>@ViewData["Title"].</h1>
  <h2 localize>@ViewData["Message"]</h2>
</header>

<address localize html="true">
  <parameter>One Microsoft Way</parameter>
  <parameter>Redmond, WA 98052-6399</parameter>
  <parameter localize>P:</parameter>
  {0}<br />
  {1}<br />
  <abbr localize-title="Phone">{2}</abbr>
  425.555.0100
</address>

<address localize html="true">
  <parameter localize>Support:</parameter>
  <parameter>Support@example.com</parameter>
  <parameter localize>Marketing:</parameter>
  <parameter>Marketing@example.com</parameter>
  <strong>{0}</strong> <a href="mailto:{1}">{1}</a><br />
  <strong>{2}</strong> <a href="mailto:{3}">{3}</a>
</address>
